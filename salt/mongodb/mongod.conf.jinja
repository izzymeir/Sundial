# mongod.conf

# izzymeir notes: This is our jinja-managed version of mongod.conf
# Most important is to make sure that we can only access the DB from localhost

{%- set address = pillar['MONGODB_IP'] -%}
{%- set port = pillar['MONGODB_PORT'] -%}

# for documentation of all options, see:
#   http://docs.mongodb.org/manual/reference/configuration-options/

# Where and how to store data.
storage:
  dbPath: /var/lib/mongodb
  journal:
    enabled: true
#  engine:
#  mmapv1:
#  wiredTiger:

# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

# network interfaces
net:
  port: {{ port }}
  bindIp: {{ address }}


